<div class="btn-group" role="group" aria-label="...">
    <%= link_to 'Spider', forward_st_path(type: "spider"), method: :get, class: "btn btn-default" %>
    <%= link_to 'Bars', forward_st_path(type: "bar"), method: :get, class: "btn btn-default" %>
</div>


<script src="https://code.highcharts.com/modules/exporting.js"></script>
<div id="container">
</div>
<script>
if(gon.spider){
    

Highcharts.chart('container', {

    chart: {
        polar: true,
        type: 'line'
    },

    title: {
        text: 'Top 5 players - ST',
        x: -80
    },
    subtitle: {
        text: 'Main attributes',
        x: -80
    },

    pane: {
        size: '100%'
    },

    xAxis: {
        categories: ['Pace', 'Shoot', 'Pass', 'Dribble', 'Defense', 'Physic'],
        tickmarkPlacement: 'on',
        lineWidth: 0
    },

    yAxis: {
        gridLineInterpolation: 'polygon',
        lineWidth: 0,
        min: 0
    },

    tooltip: {
        shared: true,
        pointFormat: '<span style="color:{series.color}">{series.name}: <b>{point.y:,.0f}</b><br/>'
    },

    legend: {
        align: 'right',
        verticalAlign: 'top',
        y: 70,
        layout: 'vertical'
    },

    series: [{
        name: gon.player_names[0],
        data: [82,90,79,87,42,79]
    }, {
        name: gon.player_names[1],
        data: [81,87,74,85,38,82],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[2],
        data: [72,90,81,85,31,86],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[3],
        data: [80,87,69,83,24,75],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[4],
        data: [89,88,75,89,23,70],
        pointPlacement: 'on'
    }]

});

}else{
Highcharts.chart('container', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Top 5 players - ST'
    },
    subtitle: {
        text: 'Main attributes'
    },
    xAxis: {
        categories: ['Pace', 'Shoot', 'Pass', 'Dribble', 'Defense', 'Physic'],
        crosshair: true
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Values'
        }
    },
    tooltip: {
        headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
        pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
            '<td style="padding:0"><b>{point.y} </b></td></tr>',
        footerFormat: '</table>',
        shared: true,
        useHTML: true
    },
    plotOptions: {
        column: {
            pointPadding: 0.2,
            borderWidth: 0
        }
    },
    series: [{
        name: gon.player_names[0],
        data: [82,90,79,87,42,79]
    }, {
        name: gon.player_names[1],
        data: [81,87,74,85,38,82],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[2],
        data: [72,90,81,85,31,86],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[3],
        data: [80,87,69,83,24,75],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[4],
        data: [89,88,75,89,23,70],
        pointPlacement: 'on'
    }]
});
}
</script>