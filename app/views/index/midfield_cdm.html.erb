<div class="btn-group" role="group" aria-label="...">
    <%= link_to 'Spider', midfield_cdm_path(type: "spider"), method: :get, class: "btn btn-default" %>
    <%= link_to 'Bars', midfield_cdm_path(type: "bar"), method: :get, class: "btn btn-default" %>
</div>


<script src="https://code.highcharts.com/modules/exporting.js"></script>
<div id="container">
</div>
<script>
if(gon.spider){
    

Highcharts.chart('container', {

    chart: {
        polar: true,
        type: 'line'
    },

    title: {
        text: 'Top 5 players - CDM/CM/LCM/RCM',
        x: -80
    },
    subtitle: {
        text: 'Main attributes',
        x: -80
    },

    pane: {
        size: '100%'
    },

    xAxis: {
        categories: ['Pace', 'Shoot', 'Pass', 'Dribble', 'Defense', 'Physic'],
        tickmarkPlacement: 'on',
        lineWidth: 0
    },

    yAxis: {
        gridLineInterpolation: 'polygon',
        lineWidth: 0,
        min: 0
    },

    tooltip: {
        shared: true,
        pointFormat: '<span style="color:{series.color}">{series.name}: <b>{point.y:,.0f}</b><br/>'
    },

    legend: {
        align: 'right',
        verticalAlign: 'top',
        y: 70,
        layout: 'vertical'
    },

    series: [{
        name: gon.player_names[0],
        data: [74,75,86,89,72,66]
    }, {
        name: gon.player_names[1],
        data: [77,80,83,87,72,87],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[2],
        data: [77,83,86,84,40,75],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[3],
        data: [45,80,88,79,69,70],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[4],
        data: [68,72,87,87,32,58],
        pointPlacement: 'on'
    }]

});

}else{
Highcharts.chart('container', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Top 5 players - CDM/CM/LCM/RCM'
    },
    subtitle: {
        text: 'Main attributes'
    },
    xAxis: {
        categories: ['Pace', 'Shoot', 'Pass', 'Dribble', 'Defense', 'Physic'],
        crosshair: true
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Values'
        }
    },
    tooltip: {
        headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
        pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
            '<td style="padding:0"><b>{point.y} </b></td></tr>',
        footerFormat: '</table>',
        shared: true,
        useHTML: true
    },
    plotOptions: {
        column: {
            pointPadding: 0.2,
            borderWidth: 0
        }
    },
    series: [{
        name: gon.player_names[0],
        data: [74,75,86,89,72,66]
    }, {
        name: gon.player_names[1],
        data: [77,80,83,87,72,87],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[2],
        data: [77,83,86,84,40,75],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[3],
        data: [45,80,88,79,69,70],
        pointPlacement: 'on'
    }, {
        name: gon.player_names[4],
        data: [68,72,87,87,32,58],
        pointPlacement: 'on'
    }]
});
}
</script>